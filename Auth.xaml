<ContentControl x:Class="Homework.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Homework"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,120,0,120" Width="346">
            <TextBlock x:Name="LoginWord" TextWrapping="Wrap" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Text="Логин"/>
            <TextBox x:Name="txbLogin" TextWrapping="Wrap" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="PasswordWord" TextWrapping="Wrap" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Text="Пароль"/>
            <PasswordBox x:Name="psbPassword" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Width="100" Height="20" Background="Gray" Click="btnLogIn_Click"/>
        </StackPanel>

    </Grid>
</ContentControl>
